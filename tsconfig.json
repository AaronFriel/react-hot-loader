{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "importHelpers": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": true,
    "downlevelIteration": true,
    // TODO: change to strict after fixing src/babel/index.ts
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "types",
    "src"
  ]
}